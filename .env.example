# Application Settings
APP_NAME=AgenticAI_Assistant
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=  # Leave empty for polling mode, set for webhook mode
TELEGRAM_WEBHOOK_SECRET=  # Optional webhook secret

# LLM Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic (Alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Groq (Fast and Free Alternative)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_BASE_URL=https://api.groq.com/openai/v1

# LLM Provider Selection (openai, anthropic, groq)
LLM_PROVIDER=openai

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/agentic_ai_db
# For SQLite (simpler setup): sqlite+aiosqlite:///./agentic_ai.db
DATABASE_ECHO=False  # Set to True for SQL query logging

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=False

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_CREDENTIALS_FILE=credentials/google_credentials.json

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Kolkata
SCHEDULER_JOB_STORE=sqlalchemy  # sqlalchemy or memory

# Memory Configuration
SHORT_TERM_MEMORY_SIZE=20  # Number of messages to keep in conversation buffer
LONG_TERM_MEMORY_ENABLED=True
TEMPORAL_MEMORY_ENABLED=True

# Agent Configuration
AGENT_MAX_ITERATIONS=5  # Maximum planning iterations
AGENT_TIMEOUT_SECONDS=30
ENABLE_CLARIFYING_QUESTIONS=True
ENABLE_PROACTIVE_SUGGESTIONS=True

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_SECONDS=60

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_USER_IDS=  # Comma-separated Telegram user IDs (leave empty to allow all)

# Feature Flags
ENABLE_VOICE_MESSAGES=False
ENABLE_IMAGE_PROCESSING=False
ENABLE_WEB_DASHBOARD=False
